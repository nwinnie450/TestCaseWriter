# Environment Variables for Test Case Writer Agent
# Copy this file to .env.local and fill in your actual values

# Application Settings
NEXT_PUBLIC_APP_NAME="Test Case Writer Agent"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# AI Service Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
AI_SERVICE_TIMEOUT=30000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/testcase_writer"
DATABASE_SSL=false

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# External Integrations
TESTRAIL_BASE_URL="https://your-company.testrail.io"
TESTRAIL_USERNAME=""
TESTRAIL_API_KEY=""

JIRA_BASE_URL="https://your-company.atlassian.net"
JIRA_USERNAME=""
JIRA_API_TOKEN=""

CONFLUENCE_BASE_URL="https://your-company.atlassian.net/wiki"
CONFLUENCE_USERNAME=""
CONFLUENCE_API_TOKEN=""

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES="pdf,docx,doc,md,txt,jpg,jpeg,png,gif"
STORAGE_PROVIDER="local"  # local, s3, azure, gcs
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Email Configuration
EMAIL_PROVIDER="smtp"  # smtp, sendgrid, mailgun
SMTP_HOST=""
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=""
SENTRY_DSN=""

# Feature Flags
FEATURE_AI_GENERATION=true
FEATURE_BULK_OPERATIONS=true
FEATURE_INTEGRATIONS=true
FEATURE_ANALYTICS=true