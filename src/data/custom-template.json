{
  "id": "custom_qa_template_v1",
  "name": "Your Custom QA Template",
  "version": 1,
  "description": "Custom test case template matching your team's exact format requirements",
  "fields": [
    {
      "key": "test_case_id",
      "type": "string",
      "label": "Test Case ID",
      "required": true,
      "unique": true,
      "pattern": "^TC-[0-9]{4}$",
      "placeholder": "TC-0001",
      "order": 1
    },
    {
      "key": "module",
      "type": "select",
      "label": "Module",
      "required": true,
      "options": [
        "Authentication",
        "User Management", 
        "Dashboard",
        "Reports",
        "Settings",
        "API",
        "Integration",
        "Security",
        "Performance"
      ],
      "order": 2
    },
    {
      "key": "test_case",
      "type": "string",
      "label": "Test Case",
      "required": true,
      "placeholder": "Test case title/name",
      "maxLength": 200,
      "order": 3
    },
    {
      "key": "test_steps",
      "type": "table",
      "label": "*Test Steps",
      "required": true,
      "columns": [
        {
          "key": "step_number",
          "label": "Step #",
          "type": "number",
          "width": "60px"
        },
        {
          "key": "description",
          "label": "Test Step Description", 
          "type": "text",
          "width": "300px"
        },
        {
          "key": "test_data",
          "label": "Test Data",
          "type": "text", 
          "width": "200px"
        },
        {
          "key": "expected_result",
          "label": "Expected Result",
          "type": "text",
          "width": "250px"
        }
      ],
      "order": 4
    },
    {
      "key": "test_result",
      "type": "select",
      "label": "Test Result",
      "required": false,
      "options": [
        "Not Executed",
        "Pass", 
        "Fail",
        "Blocked",
        "Skip"
      ],
      "default": "Not Executed",
      "order": 5
    },
    {
      "key": "qa_assigned",
      "type": "string",
      "label": "QA",
      "required": false,
      "placeholder": "QA Engineer name",
      "order": 6
    },
    {
      "key": "remarks",
      "type": "textarea",
      "label": "Remarks",
      "required": false,
      "placeholder": "Additional notes, observations, or comments",
      "maxLength": 1000,
      "order": 7
    }
  ],
  "metadata": {
    "createdBy": "System",
    "createdAt": "2025-08-25",
    "isDefault": true,
    "category": "QA Standard",
    "tags": ["qa", "testing", "standard", "custom"]
  },
  "exportMappings": {
    "excel": {
      "columnOrder": [
        "test_case_id",
        "module", 
        "test_case",
        "test_steps",
        "test_result",
        "qa_assigned",
        "remarks"
      ],
      "headers": {
        "test_case_id": "Test Case ID",
        "module": "Module", 
        "test_case": "Test Case",
        "test_steps": "*Test Steps | Test Step Description | Test Data | Expected Result",
        "test_result": "Test Result",
        "qa_assigned": "QA",
        "remarks": "Remarks"
      }
    },
    "testRail": {
      "fieldMappings": {
        "test_case_id": "custom_test_id",
        "test_case": "title",
        "test_steps": "steps_separated",
        "test_result": "status_id",
        "remarks": "custom_notes"
      }
    },
    "jiraXray": {
      "issueType": "Test",
      "fieldMappings": {
        "test_case_id": "summary",
        "test_case": "description", 
        "module": "components",
        "test_steps": "xray_steps",
        "qa_assigned": "assignee",
        "remarks": "comment"
      }
    }
  }
}