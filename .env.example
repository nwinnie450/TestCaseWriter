# Environment Configuration for Test Case Writer

# Disable mock data in production (set to 'true' to disable)
DISABLE_MOCK_DATA=false
NEXT_PUBLIC_DISABLE_MOCK_DATA=false

# Email Configuration
# Options: 'development' (console logging), 'gmail' (easy setup), 'sendgrid' (professional)
EMAIL_PROVIDER=development

# Gmail Configuration (recommended for admin use - easy setup)
# Only needed when EMAIL_PROVIDER=gmail
GMAIL_USER=your.email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# SendGrid Configuration (professional use)
# Only needed when EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email From Settings (used by all providers)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Test Case Writer

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# App Environment
NODE_ENV=development

# Note: In production/Vercel deployment, these will be automatically set:
# NODE_ENV=production
# DISABLE_MOCK_DATA=true
# NEXT_PUBLIC_DISABLE_MOCK_DATA=true